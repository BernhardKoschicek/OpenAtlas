[MASTER]
ignore=openatlas.wsgi
disable=C0111, broad-except, duplicate-code
good-names=bc, e, ex, f, i, id, ip, j, js, k, l, Run, rv, to, x, y, _

min-public-methods=1 # default=2 but isn't useful with inheritance

# We are still learning. Lower/remove these limits once all above are solved.
max-args=6           # default=5  (too-many-arguments)
max-branches=20      # default=12 (too-many-branches)
max-statements=80    # default=50 (too-many-statements)

[FORMAT]
max-line-length=79
